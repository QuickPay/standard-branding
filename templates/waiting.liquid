<div class="container" data-session-id="{{ model.session_id }}">
  {% if model.selected_payment_method == "swish" %}
    <div class="highlighted-text center-y text-center-xs">
      <img class="icon-md" src="{{ images.info-circle.svg }}">
      {% t Open Swish App %}
    </div>
    <div class="text-center-xs">
      <p>{% t To complete the payment, open your Swish App on your mobile device and authorize the payment %}</p>
      <p>{% t You have 3 minutes to complete the payment %}</p>
      <p>
        <strong>{% t Waiting for authorization %}</strong>
      </p>
    </div>
  {% else %}
    <div class="highlighted-text center-y text-center-xs">
      <img class="icon-md icon-rotate" src="{{ images.cog.svg }}">
      {% t Please wait... %}
    </div>
    <div class="text-center-xs">
      <p>{% t The process may take some time. %}
        <a href="{{ model.autorefresh_to }}">{% t Click here if processing takes a long time %}</a>.</p>
    </div>
  {% endif %}
</div>
