<div class="container">
  <form action="{{ model.redirect_url }}" method="POST">
    <input type="hidden" name="session_id" value="{{ model.session_id }}" />
    {% for field in model.params %}
      <input type="hidden" name="{{ field[0] }}" value='{{ field[1] }}' />
    {% endfor %}
    <div class="text-center">
      <img src="/assets/v2/images/brands/resurs.svg" alt="Resurs logo">
    </div>
    <div>
      {% for method in model.resurs_methods %}
        <div class="inline-box">
          <input type="radio" name="resurs_method" id="resurs_method_{{ method['id'] }}" value="{{ method['id'] }}" />
          <label for="resurs_method_{{ method['id'] }}">{{ method['description'] }}
            (<a href="{{ method['legal_url'] }}">{{ method['legal_description'] }}</a>)
          </label>
        </div>
      {% endfor %}
      <div>
        <p>{% t When you click the button below, the Resurs payment window will open. %}</p>
        <p>{% t When finished, you will be redirected back to your receipt. %}</p>
        <button type="submit" class="btn btn-primary">{% t Proceed to payment %}</button>
      </div>
    </div>
  </form>
</div>