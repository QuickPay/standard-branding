<div class="container">
  {% if model.trustly_url %}
    <div class="text-center">
      <img src="/assets/v2/images/brands/ideal.svg" alt="iDeal logo">
    </div>
    <div>
      <p>{% t When you click the button below, the iDeal payment window will open. %}</p>
      <p>{% t When finished, you will be redirected back to your receipt. %}</p>
      <a href="{{ model.trustly_url }}" class="btn btn-primary autoclick">{% t Proceed to payment %}</a>
    </div>
  {% else %}
    {% include 'form/error' %}
    <form method="post" autocomplete="off" action="process_trustly">
      <input type="hidden" name="session_id" value="{{ model.session_id }}" />
      <div class="text-center">
        <img src="/assets/v2/images/brands/ideal.svg" alt="iDeal logo">
      </div>
      <div>
        <div class="form-group">
          <label for="first_name">{% t First name %}</label>
          <input id="first_name" class="form-control" name="person[first_name]" autocomplete="on" required>
        </div>
        <div class="form-group">
          <label for="last_name">{% t Last name %}</label>
          <input id="last_name" class="form-control" name="person[last_name]" autocomplete="on" required>
        </div>
        <button type="submit" class="btn btn-primary">{% t Proceed %}</button>
      </div>
    </form>
  {% endif %}
</div>