<div class="container">
  <form class="form-horizontal" method="post" autocomplete="off" action="process_unzer_pay_later">
    <input type="hidden" name="session_id" value="{{ model.session_id }}" />
    <div class="row">
      <div class="col-sm-4 col-sm-push-8 col-xs-6 col-xs-push-3">
          <img src="/assets/v2/images/brands/unzer-pay-later-installment.svg" alt="Unzer Pay Later" title="Unzer Pay Later Installment" style="width:100%">
      </div>
      <div class="col-sm-8 col-sm-pull-4 col-xs-12">
        <div class="form-group">
          <div class="col-xs-12">
            <label for="person_email" class="control-label">{% t Email Address %}</label>
            <input type="text" id="person_email" name="person[email]" value="{{ model.invoice_address.email}}" class="form-control" autocomplete="on">
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <label for="first_name" class="control-label">{% t First name %}</label>
            <input type="text" id="first_name" class="form-control" name="person[first_name]" value="{{ model.full_name[0] }}" autocomplete="on" required>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <label for="last_name" class="control-label">{% t Last name %}</label>
            <input type="text" id="last_name" class="form-control" name="person[last_name]" value="{{ model.full_name[1] }}"  autocomplete="on" required>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <label for="person_dob" class="control-label">{% t Date of Birth %}</label>
            <input type="date" id="person_dob" name="person[dob]" class="form-control" required>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <label for="person_iban" class="control-label">{% t Iban %}</label>
            <input type="text" id="person_iban" name="person[iban]" class="form-control" autocomplete="on">
          </div>
          <div class="col-xs-12">
            <label for="person_bic" class="control-label">{% t Bank Identifier Code (SWIFT) %}</label>
            <input type="text" id="person_bic" name="person[bic]" class="form-control" autocomplete="on">
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            {% for details in model.payment_details %}
              <label class="radio-inline">
                <input type="radio" name="payment_plan" value="{{details[0]}}"> <strong>{{details[1]}}</strong>
              </label>
            {% endfor %}
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <button type="submit" class="btn btn-info btn">{% t Proceed %}</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
