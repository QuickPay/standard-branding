<div class="container">
  <form action="{{ model.redirect_url }}" method="GET" class="autosubmit">
    {% for field in model.params %}
      <input type="hidden" name="{{ field[0] }}" value='{{ field[1] }}' />
    {% endfor %}
    <div class="text-center">
      <img src="/assets/v2/images/brands/anyday-split.svg" alt="Anyday split logo">
    </div>
    <div>
      <p>{% t When you click the button below, the Anyday split payment window will open. %}</p>
      <p>{% t When finished, you will be redirected back to your receipt. %}</p>
      <button type="submit" class="btn btn-primary">{% t Proceed to payment %}</button>
    </div>
  </form>
</div>