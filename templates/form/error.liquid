{% if model.acquirer_error_message or model.error %}
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h4 class="center-y text-center-xs" style="margin-top: 0">
          <img class="icon" src="{{ images.frown-o.svg }}">
          {% if model.acquirer_error_message %}
            {{ model.acquirer_error_message }}
          {% endif %}

          {% if model.error %}
            {% case model.error %}
            {% when "try_again" %}
              {% t An error happened. %} {% t Please try again. %}
            {% when "live_payment_on_test_transaction" %}
              {% t You tried to make a live payment on a test transaction. %}
            {% when "test_payment_on_live_transaction" %}
              {% t You tried to make a test payment on a live transaction. %}
            {% when "validation_error" %}
              {{ model.error_description }}
            {% endcase %}
          {% endif %}
        </h4>
      </div>
    </div>
  </div>
{% endif %}
