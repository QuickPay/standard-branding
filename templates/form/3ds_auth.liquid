<div class="container">
  <div id="3d_wait">
    <div class="highlighted-text center-y text-center-xs">
      <img class="icon-md icon-rotate" src="{{ images.cog.svg }}">
      {% t Running 3-D Secure checks. Please wait... %}
      </div>
    </div>
</div>

{% if model.method_url %}
  <iframe class="hidden" name="threeDSMethodIframe"></iframe>

  <form id="3ds_method_form" action="{{ model.method_url }}" method="post" target="threeDSMethodIframe">
    <input type="hidden" name="threeDSMethodData" value="{{ model.method_data }}"/>
  </form>
{% endif %}

<form id="3ds_auth_form" action="{{ model.auth_url }}" method="post"></form>
